package components;
import java.awt.*;
import java.awt.event.*;//1/5 ActionListener,WindowListener
public class PrimeraLinea extends Frame implements WindowListener{
	public static void main(String[] args) {
		PrimeraLinea PL=new PrimeraLinea();
		PL.repaint();
	}
	Frame f;
	public PrimeraLinea(){
		setTitle("Una linea");
		addWindowListener(new WindowAdapter() {
			public void windowClosing(WindowEvent e){
				System.exit(0);
			}
		});
		setSize(300, 300);
		setLocationRelativeTo(null);
		setVisible(true);
	}
	public void paint(Graphics g){
		g.drawLine(0,0,100,100);
	}
}//end class PrimeraLinea
